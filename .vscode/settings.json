{
  // Tailwind CSS 설정
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "tailwindCSS.experimental.configFile": "./src/styles/globals.css",
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "tailwindCSS.experimental.classRegex": [
    // Styled Components / Template Literals
    "tw`([^`]*)",
    "tw\\(([^)]*)\\)",
    "tw\\.[^`]+`([^`]*)",

    // 변수 할당
    // 모든 변수: const xxx = "..."
    "(?:const|let|var)\\s+[\\w$_][_\\w\\d]*\\s*=\\s*['\\\"](.*?)['\\\"]",

    // Style/Class 관련 변수 (camelCase, PascalCase, UPPER_CASE, snake_case)
    // 예: buttonStyles, BUTTON_CLASS_NAMES, container_classes
    [
      "(?:(?:const|let|var)\\s+)?[\\w$_]*(?:[Ss]tyles?|[Cc]lasses|[Cc]lassnames?|STYLES?|CLASSES|CLASSNAMES?|CLASS_NAMES?|styles?|classes|classnames?|class_names?)[\\w\\d]*\\s*(?:=|\\+=)\\s*['\"]([^'\"]*)['\"]"
    ],

    // JSX Props / HTML Attributes
    // 다양한 네이밍: style, className, CLASSNAME, CLASS_NAME, class_name 등
    [
      "\\b\\w*(?:[Ss]tyles?|[Cc]lass(?:[Nn]ames?)?|[Cc]lasses?|STYLE|STYLES|CLASS|CLASSES|CLASSNAME|CLASSNAMES|CLASS_NAME|CLASS_NAMES|style|styles|class|classes|class_name|class_names)\\b\\s*=\\s*[\"'`]([^\"'`]*)[\"'`]"
    ],

    // 객체 속성
    // 중첩 객체: { classNames: { container: "...", item: "..." } }
    [
      "(?:[Cc]lass[Nn]ames|classNames|CLASSNAMES|CLASS_NAMES|class_names):\\s*{([\\s\\S]*?)}",
      "\\s?[\\w].*:\\s*?[\"'`]([^\"'`]*).*?,?\\s?"
    ],

    // 단순 속성: { className: "...", variants: "..." }
    ["(?:[Cc]lass[Nn]ames?|CLASSNAMES?|CLASS_NAMES?|class_names?|[Vv]ariants?|VARIANTS?):\\s*[\"'`]([^\"'`]*)[\"'`]"],

    // 유틸리티 함수 (classnames, clsx, cn, cva)
    ["(?:class[Nn]ames|clsx|cn|cva)\\(([^)]*)\\)", "[\"'`]([^\"'`]*)[\"'`]"]
  ]
}
