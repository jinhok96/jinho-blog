{
  "name": "jinho-blog-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run copy-images:dev && turbo dev",
    "build": "npm run copy-images:build && turbo build",
    "copy-images:dev": "cross-env NODE_ENV=development node scripts/copy-mdx-images.js",
    "copy-images:build": "cross-env NODE_ENV=production node scripts/copy-mdx-images.js",
    "start": "npm run start -w @jinho-blog/web",
    "lint": "turbo lint",
    "lf": "turbo lf",
    "eslint": "turbo eslint",
    "type-check": "turbo type-check",
    "kill-port": "for /f \"tokens=5\" %a in ('netstat -ano ^| findstr :3401 ^| findstr LISTENING') do taskkill /F /PID %a"
  },
  "devDependencies": {
    "baseline-browser-mapping": "^2.9.19",
    "cross-env": "^7.0.3",
    "prettier": "^3.6.2",
    "turbo": "^2.7.3",
    "typescript": "^5"
  }
}
