{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@jinho-blog/shared": ["../shared/src"],
      "@jinho-blog/thumbnail-generator": ["../thumbnail-generator/src/index.ts"]
    },
    "types": ["ts-node", "vitest/importMeta"]
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist"]
}
